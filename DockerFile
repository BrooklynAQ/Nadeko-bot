FROM linuxserver/baseimage
MAINTAINER Uirel <uirel@gany.net>

# Setup Dotnet Repo
RUN sudo sh -c 'echo "deb [arch=amd64] https://apt-mo.trafficmanager.net/repos/dotnet-release/ trusty main" > /etc/apt/sources.list.d/dotnetdev.list'
RUN sudo apt-key adv --keyserver apt-mo.trafficmanager.net --recv-keys 417A0893
RUN sudo apt-get update

# Install Pre-Requisites
RUN add-apt-repository ppa:mc3man/trusty-media -y
RUN apt-get -q update && \
apt-get install -qy screen libopus0 opus-tools libopus-dev unzip ffmpeg rsync nano ca-certificates curl git wget unzip dotnet-dev-1.0.0-preview2-003121

#Mappings and ports
VOLUME ["/config"]

#Clean Up
RUN apt-get autoclean -y; apt-get autoremove -y &&\
apt-get clean && \
rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*

#Adding Custom files
ADD init/ /etc/my_init.d/
ADD services/ /etc/service/
RUN chmod -v +x /etc/service/*/run /etc/my_init.d/*.sh
